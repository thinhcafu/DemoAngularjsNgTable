    <table ng-table="tableParams"  show-filter="true" class="table table-striped"  style="width:400px;margin:0 auto;">
        <tr ng-repeat="x in dataProduct">
            <td data-title="'ID'" >{{x.Id}}</td>
            <td data-title="'Name'" filter="{ 'Name': 'text' }">{{x.Name}}</td>
